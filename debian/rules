#!/usr/bin/make -f
# -*- makefile -*-
DEB_VERSION:=$(shell dpkg-parsechangelog -n1 | sed -n '/^Version: /s///p')
DEB_UPSTREAM_VERSION:=$(shell DEB_VERSION=${DEB_VERSION}; echo $${DEB_VERSION%-*})
DEB_UPSTREAM_VERSION:=$(shell DEB_UPSTREAM_VERSION=${DEB_UPSTREAM_VERSION}; echo $${DEB_UPSTREAM_VERSION\#*:})
DEB_MASTER_VERSION:=$(shell DEB_UPSTREAM_VERSION=${DEB_UPSTREAM_VERSION}; echo $${DEB_UPSTREAM_VERSION\#*+git})

#uncomment this to turn on verbose mode.
export DH_VERBOSE=1

%:
	dh $@

override_dh_auto_configure:
	sed -i 's|qcd\.sh|/usr/share/qcd/qcd\.sh|' bashrc

get-orig-source:
	rm -rf debian/tmp; mkdir debian/tmp
	cd debian/tmp; wget https://github.com/lordadamson/QuickCD/archive/${DEB_MASTER_VERSION}.tar.gz
	cd debian/tmp; tar xvzf ${DEB_MASTER_VERSION}.tar.gz
	cd debian/tmp; mv QuickCD-* QuickCD-${DEB_UPSTREAM_VERSION}
	cd debian/tmp; tar cvJf QuickCD_${DEB_UPSTREAM_VERSION}.orig.tar.xz QuickCD-${DEB_UPSTREAM_VERSION}
	mv debian/tmp/QuickCD_${DEB_UPSTREAM_VERSION}.orig.tar.xz .
	mv debian/tmp/QuickCD-${DEB_UPSTREAM_VERSION} .
	rm -rf debian/tmp
